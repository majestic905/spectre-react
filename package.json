    "jest": "^27.2.2",
    "jsdom": "^17.0.0",
    "parcel": "^2.13.3",
    "standard": "^16.0.3"
  },
  "dependencies": {
    "@swc/helpers": "^0.5.15",
    "classnames": "^2.5.1",
    "prop-types": "^15.8.1",
