{
  "name": "spectre-react",
  "version": "0.3.0",
  "description": "React components for Spectre.css",
  "type": "module",
  "main": "dist/index.js",
  "files": [
    "dist"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/CodeDraken/spectre-react.git"
  },
  "homepage": "https://codedraken.github.io/spectre-react/",
  "standard": {
    "ignore": [
      "node_modules/**"
    ],
    "parser": "@babel/eslint-parser",
    "envs": [
      "jest",
      "node"
    ]
  },
  "scripts": {
    "build": "parcel build src/index.js",
